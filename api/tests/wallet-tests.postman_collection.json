{
  "info": {
    "name": "Car Rental API - Wallet Tests",
    "description": "Normal user wallet actions: deposit, withdraw, transaction history.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api/v1" },
    { "key": "user_token", "value": "" },
    { "key": "user_email", "value": "" },
    { "key": "timestamp", "value": "" }
  ],
  "item": [
    {
      "name": "User Registration",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const timestamp = Date.now();",
              "pm.collectionVariables.set('timestamp', timestamp);",
              "pm.collectionVariables.set('user_email', `walletuser${timestamp}@test.com`);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 201', function() {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "pm.test('Response has token', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.token).to.exist;",
              "    pm.collectionVariables.set('user_token', jsonData.token);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Wallet User\",\n  \"email\": \"{{user_email}}\",\n  \"password\": \"password123\",\n  \"telephone\": \"0812345678\",\n  \"role\": \"user\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "User Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response has token', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.token).to.exist;",
              "    pm.collectionVariables.set('user_token', jsonData.token);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Check Initial Balance",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('User has balance field', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.balance).to.exist;",
              "    pm.expect(jsonData.data.balance).to.equal(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/auth/me",
          "host": ["{{base_url}}"],
          "path": ["auth", "me"]
        }
      }
    },
    {
      "name": "Deposit Money",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Balance updated correctly', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.newBalance).to.equal(5000);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"amount\": 5000\n}" },
        "url": {
          "raw": "{{base_url}}/transactions/deposit",
          "host": ["{{base_url}}"],
          "path": ["transactions", "deposit"]
        }
      }
    },
    {
      "name": "Withdraw Money",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Balance updated correctly', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.newBalance).to.equal(4500);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"amount\": 500\n}" },
        "url": {
          "raw": "{{base_url}}/transactions/withdraw",
          "host": ["{{base_url}}"],
          "path": ["transactions", "withdraw"]
        }
      }
    },
    {
      "name": "View Transaction History",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Transaction history exists', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "    pm.expect(jsonData.data.length).to.be.at.least(2);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/transactions",
          "host": ["{{base_url}}"],
          "path": ["transactions"]
        }
      }
    }
  ]
}
