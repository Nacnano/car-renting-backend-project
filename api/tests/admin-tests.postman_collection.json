{
  "info": {
    "name": "Car Rental API - Admin Tests",
    "description": "Admin actions: login, view/edit/delete any booking, manage car providers.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api/v1" },
    { "key": "admin_token", "value": "" },
    { "key": "car_provider_id", "value": "" },
    { "key": "booking_id", "value": "" },
    { "key": "admin_email", "value": "" },
    { "key": "timestamp", "value": "" }
  ],
  "item": [
    {
      "name": "Admin Registration",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const timestamp = Date.now();",
              "pm.collectionVariables.set('timestamp', timestamp);",
              "pm.collectionVariables.set('admin_email', `admin${timestamp}@test.com`);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 201', function() {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "pm.test('Response has token', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.token).to.exist;",
              "    pm.collectionVariables.set('admin_token', jsonData.token);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"password123\",\n  \"telephone\": \"1234567890\",\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Admin Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response has token', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.token).to.exist;",
              "    pm.collectionVariables.set('admin_token', jsonData.token);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Create Car Provider",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201 or 200', function() {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "pm.test('Car provider created', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data._id).to.exist;",
              "    pm.collectionVariables.set('car_provider_id', jsonData.data._id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Best Cars Provider\",\n  \"address\": \"123 Main Street\",\n  \"telephone\": \"555-1234\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/carproviders",
          "host": ["{{base_url}}"],
          "path": ["carproviders"]
        }
      }
    },
    {
      "name": "Admin View All Bookings",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Admin can see all bookings', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "    if (jsonData.data.length > 0) {",
              "        pm.collectionVariables.set('booking_id', jsonData.data[0]._id);",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/bookings",
          "host": ["{{base_url}}"],
          "path": ["bookings"]
        }
      }
    },
    {
      "name": "Admin Edit Any Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Admin successfully updated booking', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.bookingDate).to.include('2026-02-02');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bookingDate\": \"2026-02-02\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/bookings/{{booking_id}}",
          "host": ["{{base_url}}"],
          "path": ["bookings", "{{booking_id}}"]
        }
      }
    },
    {
      "name": "Admin Delete Any Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Admin successfully deleted booking', function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/bookings/{{booking_id}}",
          "host": ["{{base_url}}"],
          "path": ["bookings", "{{booking_id}}"]
        }
      }
    },
    {
      "name": "Delete Car Provider",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/carproviders/{{car_provider_id}}",
          "host": ["{{base_url}}"],
          "path": ["carproviders", "{{car_provider_id}}"]
        }
      }
    }
  ]
}
