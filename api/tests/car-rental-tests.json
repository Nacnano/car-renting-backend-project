    {
      "name": "1. Register Admin",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Initialize global timestamp for unique emails",
              "const timestamp = Date.now();",
              "pm.collectionVariables.set(\"timestamp\", timestamp);",
              "console.log(\"Timestamp set to:\", timestamp);"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "",
              "pm.test(\"Admin Registered Successfully\", function () {",
              "    pm.response.to.have.status(200); // or 201 depending on API",
              "    pm.expect(jsonData).to.have.property(\"token\");",
              "});",
              "",
              "if (jsonData.token) {",
              "    pm.collectionVariables.set(\"adminToken\", jsonData.token);",
              "    console.log(\"Admin Token set\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin{{timestamp}}@test.com\",\n    \"password\": \"password123\",\n    \"telephone\": \"1234567890\",\n    \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/register",
          "host": ["{{BASE_URL}}"],
          "path": ["auth", "register"]
        }
      }
